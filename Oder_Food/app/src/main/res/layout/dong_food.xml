<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E5E5">

    <ImageView
        android:id="@+id/img_food"
        android:layout_width="130dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/title_food"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_toRightOf="@+id/img_food"
        android:text="item"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mota_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_food"
        android:layout_toRightOf="@id/img_food"
        android:text="mota"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/item_gia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mota_food"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/img_food"
        android:text="6$"
        android:textColor="#3F51B5"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cong"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/title_food"
        android:background="@drawable/boder"
        android:padding="3dp"
        android:text="+"
        android:textAlignment="center"
        android:textColor="#3F51B5"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tru"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_below="@id/title_food"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/title_food"
        android:background="@drawable/boder"
        android:text="-"
        android:padding="3dp"
        android:textAlignment="center"
        android:textColor="#3F51B5"
        android:textSize="20dp"
        android:textStyle="bold" />
</RelativeLayout>